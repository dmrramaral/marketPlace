{
    "openapi": "3.0.0",
    "info": {
        "title": "MarketPlace API",
        "description": "API para gerenciamento do marketplace.",
        "version": "1.0.0",
        "contact": {
            "name": "Suporte MarketPlace",
            "email": "dmrramaral@gmail.com"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Servidor local"
        }
    ],
    "paths": {
        "/auth/login": {
            "post": {
                "summary": "Realiza login do usuário",
                "tags": ["Auth"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": { "type": "string" },
                                    "password": { "type": "string" }
                                },
                                "required": ["email", "password"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login realizado com sucesso, retorna o token JWT",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": { "type": "string" }
                                    }
                                }
                            }
                        }
                    },
                    "401": { "description": "Credenciais inválidas" },
                    "500": { "description": "Erro interno do servidor" }
                }
            }
        }
    },
    "components": {
        "schemas": {},
        "securitySchemes": {}
    }
}